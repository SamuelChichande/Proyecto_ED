<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosVuelo">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="15dp"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fondo_reserva"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fuente4"
            android:textColor="#000000"
            android:text="Flight data"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="39dp" />

        <TableLayout
            android:id="@+id/tl_DatosVuelos"
            android:layout_width="match_parent"
            android:layout_height="584dp">


        </TableLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_regresar_viewDatos"
            android:layout_width="140dp"
            android:layout_height="49dp"
            app:cornerRadius="10dp"
            app:strokeColor="#F0F5F6"
            app:strokeWidth="3dp"
            app:iconPadding="5dp"
            app:iconSize="0dp"
            app:rippleColor="@color/white"
            android:text="Reservar"
            android:backgroundTint="#E4691F"


            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>